<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#1C6071"
    tools:context="com.example.ahmedali.e_commerce.forget_pass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your phone Number"
        android:layout_marginTop="50dp"
        android:textColor="#fff"
        android:background="#23A0C4"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:id="@+id/phone"
        android:inputType="textEmailAddress"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_border"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#23A0C4"
        android:textColor="#fff"
        android:text="Get password"
        android:id="@+id/getpass"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your pass is "
        android:background="#23A0C4"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:background="@drawable/edit_border"
        android:id="@+id/yourpass"/>



</LinearLayout>
